@using MetaFrm.Control
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@inherits BaseComponent

<AuthorizeView>
    <Authorized>
        <li class="nav-item me-2">
            <NavLink class="nav-link">
                @this.DisplayName
            </NavLink>
        </li>
        <li class="nav-item" @onclick="this.ToggleNavMenu" disabled="@this.LoginDisplayViewModel.IsBusy">
            <input type="button" class="btn btn-secondary py-1 my-1" value="Sign out" @onclick="this.OnLogoutClick" href="/" disabled="@this.LoginDisplayViewModel.IsBusy">
                Sign out
            </input>
        </li>
    </Authorized>
     <NotAuthorized>
        <li class="nav-item me-2" @onclick="ToggleNavMenu" disabled="@this.LoginDisplayViewModel.IsBusy">
            <input type="button" class="btn btn-secondary py-1 my-1" value="Sign in" @onclick="this.OnLoginClick" href="/" disabled="@this.LoginDisplayViewModel.IsBusy">
                Sign in
            </input>
        </li>
        <li class="nav-item me-2" @onclick="ToggleNavMenu" disabled="@this.LoginDisplayViewModel.IsBusy">
            <input type="button" class="btn btn-secondary py-1 my-1" value="Register" @onclick="this.OnRegisterClick" href="/" disabled="@this.LoginDisplayViewModel.IsBusy">
                Register
            </input>
        </li>
        <li class="nav-item me-2" @onclick="ToggleNavMenu" disabled="@this.LoginDisplayViewModel.IsBusy">
            <input type="button" class="btn btn-secondary py-1 my-1" value="Password Reset" @onclick="this.OnPasswordResetClick" href="/" disabled="@this.LoginDisplayViewModel.IsBusy">
                Password Reset
            </input>
        </li>
     </NotAuthorized>
</AuthorizeView>